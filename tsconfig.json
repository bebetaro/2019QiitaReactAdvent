{
  "exclude": ["node_modules", "build", "es", "lib"],
  "compilerOptions": {
    // if your app support IE11, please set target "es5"
    "target": "es6",
    // "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "DOM",
      "DOM.Iterable",
      "es2015",
      "es2016",
      "es2017" /* , "es2018" */
    ],
    "module": "esNext",
    "jsx": "react",
    "allowJs": true,
    // "checkJs": true,
    // "declaration": true,
    // "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "incremental": true,
    "tsBuildInfoFile": "./.tsbuildinfo",
    "importHelpers": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true
  }
}
